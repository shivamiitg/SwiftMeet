<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>videoChatApp</title>
    <link rel="stylesheet" href="style.css" />
    <link href="https://unpkg.com/tailwindcss@^2.0/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://kit.fontawesome.com/6a00b899d8.js" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <!-- <script src="jquery-3.6.0.min.js"></script> -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

    <script>
      const ROOM_ID = "<%= roomId %>";
      const NAME = "<%= user %>";
    </script>
  </head>
  <body>
    <div class="header text-white flex justify-between">
      <dp class="logo ml-6">
          <div class="text-medium">ID:  <%= roomId %></div>
      </dp>
      <div class="logo mr-5">
        <form id="getMail" class="flex pl-4" action="/room" method="post">
          <input name="email" id="email" class="text-white w-40 border-white px-2  rounded-xl" placeholder="Enter email" type="text">
          <input id="submit" class="submit text-white border-white rounded-xl px-2 ml-4 text-sm" type="submit" value="Send invite">
        </form>
    </div>
    </div>  
  <div class="main">  
    <div class="main__left">
      <div class="videos__group">
        <div id="video-grid">

        </div>
      </div>
      <div class="options">
        <div class="options__left">
          <div id="stopVideo" class="options__button main__video_button" onclick="playStop()">
            <i class="fa fa-video-camera"></i>
          </div>
          <div id="muteButton" class="options__button main__mute_button" onclick="muteUnmute()">
            <i class="fa fa-microphone"></i>
          </div>
          <a id="leaveMeet" class="options__button main__leave_meet" href="/home">
            <i class="fa-solid fa-phone-slash"></i>
          </a>
          <div class="text-white pl-4 pt-2.5 text-lg">
          <p><span id="mins">00</span>:<span id="seconds">00</span></p>
        </div>
        </div>
        <div class="options__right">
            <div id="stbtn" class="options__button">
                <!-- <i class="fa-solid fa-circle"></i> -->
                <i class="fa-solid fa-circle-dot"></i>
              </div>
              <div id="stopbtn" class="options__button">
                <i class="fa-solid fa-download"></i>
              </div>
            <div id="shareScreen" onclick="startScreenShare()" class="options__button">
                <i class="fa-solid fa-display"></i>
              </div>
            <div id="newoption" class="options__button">
              <i class="fa-regular fa-message"></i>
          </div>
          <div id="chat" class="options__button">
            <i class="fa-regular fa-message"></i>
        </div>
            
        </div>
      </div>
    </div>
    <div class="main__right">
      <div class="main__chat_window">
          <ul class="messages text-white">

          </ul>
      </div>
      <div class="main__message_container">
        <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here...">
      </div>
    </div>
  </div>
  </body>
  <script src="script.js"></script>
</html>